<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="guan.pcihearten.game_room"
    tools:showIn="@layout/activity_game_room"
    >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_ronso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/game_card_1"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="@dimen/card_game_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
          >
            <TextView
                android:id="@+id/game_card_text_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:text="Madie Grass"
                android:textColor="@color/gameText"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/game_card_2"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="@dimen/card_game_width"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/game_card_text_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:text="2"
                android:textColor="@color/gameText"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/game_card_3"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="@dimen/card_game_width"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/game_card_text_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:text="3"
                android:textColor="@color/gameText"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/question_card"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="match_parent"
        android:layout_below="@+id/game_card_1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/question_card_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:text="Question... Question"
                android:textColor="@color/gameText"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/game_card_4"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="@dimen/card_game_width"
        android:layout_below="@id/question_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/game_card_text_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:text="Madie Grass"
                android:textColor="@color/gameText"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/game_card_5"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="@dimen/card_game_width"
        android:layout_below="@id/question_card"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/game_card_text_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:text="5"
                android:textColor="@color/gameText"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/game_card_6"
        android:clickable="true"
        android:layout_height="@dimen/card_game_height"
        android:layout_width="@dimen/card_game_width"
        android:layout_below="@id/question_card"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gameCard"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/game_card_text_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:text="6"
                android:textColor="@color/gameText"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>





</RelativeLayout>

</ScrollView>

