                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCard"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/cardview_list_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="5dp"
                        android:text="@string/preprocedure_title_string1"
                        android:textSize="24sp"
                        android:textColor="@color/stepColor" />

                    <TextView
                        android:id="@+id/short_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardview_list_title"
                        android:text="@string/preprocedure_desc_string1"
                        android:textSize="@dimen/desc_size"
                        android:textColor="@color/desc_color" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

