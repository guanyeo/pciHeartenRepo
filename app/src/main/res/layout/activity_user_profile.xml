<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
<RelativeLayout
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="guan.pcihearten.user_profile">



    <RelativeLayout
        android:id="@+id/status_bar_p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frame_avatar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/profile_avatar"/>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/profile_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:background="@drawable/level_layer"
                    android:padding="2dp"
                    android:textColor="#000"/>
            </RelativeLayout>



        </FrameLayout>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/frame_avatar"
            android:layout_marginLeft="15dp"
            android:text="Player Name"/>

        <ProgressBar
            android:id="@+id/profile_exp"
            android:layout_below="@id/profile_name"
            android:layout_toRightOf="@id/frame_avatar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="33"
          />

        <TextView
            android:id="@+id/profile_exp_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/100"
            android:textAlignment="center"
            android:textColor="@color/gameText"
            android:layout_alignLeft="@id/profile_exp"
            android:layout_alignTop="@id/profile_exp"
            android:layout_alignRight="@id/profile_exp"
            android:layout_alignBottom="@id/profile_exp"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/achieve_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_bar_p1"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard"
            android:padding="16dp">

            <ImageView
                android:id="@+id/achieve_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/colorAccent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/achieve_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/achieve_img"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:textColor="@color/gameText"
                android:text="Achievement Title"
                />

            <TextView
                android:id="@+id/achieve_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement Description"
                android:layout_below="@id/achieve_title"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gameText"
                android:layout_toRightOf="@+id/achieve_img"

                android:textSize="14sp"
                android:textStyle="normal|italic" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/achieve_card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/achieve_card_1"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard"
            android:padding="16dp">

            <ImageView
                android:id="@+id/achieve_img_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/colorAccent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/achieve_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/achieve_img_2"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:textColor="@color/gameText"
                android:text="Achievement Title"
                />

            <TextView
                android:id="@+id/achieve_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement Description"
                android:layout_below="@id/achieve_title_2"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gameText"
                android:layout_toRightOf="@+id/achieve_img_2"

                android:textSize="14sp"
                android:textStyle="normal|italic" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>